<h1>My posts</h1>

<% if @posts %>
	<% @posts.each do |post| %>
		<div class="row justify-content-md-center mt-5">
			<div class="col-md-9">
				<div class="card">
				  <div class="card-header">				  	
				  	<div class="row">				  		
					    <div class="col-3">
					    	<h2><%= post.title %></h2>
					    </div>
					    <div class="col-9">
					    	<div class="d-flex flex-row-reverse">
					    		<span style="color: black;" class="ml-5">
								  <%= fa_icon 'retweet' %>
								</span>
					    		<span style="color: black;">
								  <%= fa_icon 'heart' %>
								</span>
					    	</div>
						</div>
					</div>
				  </div>
				  <div class="card-body">
				    <blockquote class="blockquote mb-0">
				      <p><%= post.content %></p>
				      <footer class="blockquote-footer">Published by: <cite title="Source Title"><%= post.user.username %></cite></footer>
				    </blockquote>
				  </div>
				</div>
			</div>
		</div>
	<% end %>
<% end %>