<%= form_with(model: @post, local: true)  do |f| %>
	<div class="row justify-content-md-center mt-5">
		<div class="col-md-9">
			<div class="card">
			  <div class="card-header">
					<div class="form-group row">
						<div class="col-9">
							<h2>New post !</h2>
						</div>
						<div class="col-2 justify-content-md-center">
							<%= f.submit 'Publish', class: "btn btn-outline-success btn-lg" %>
						</div>						
					</div>
			  </div>
			  <div class="card-body">
			    <blockquote class="blockquote mb-0">
			    	<div class="form-group row">
						<%= f.label :title, class: "col-2 col-form-label" %>
						<div class="col-10">
							<%= f.text_field :title, class: "form-control", placeholder: "Title of article" %>
						</div>
					</div>
			      	<div class="form-group row">
						<%= f.label :description, class: "col-2 col-form-label" %>
						<div class="col-10">
							<%= f.text_area :description, rows:3, class: "form-control", placeholder: "Description of article" %>
						</div>
					</div>
			    </blockquote>
			  </div>
			</div>
		</div>
	</div>
<% end %>